<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>SuppliesManagementSystem</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.sms.servlet.LoginController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
  <!-- Mel -->
  <servlet>
  	<servlet-name>suppliesStocks</servlet-name>
  	<servlet-class>com.sms.servlet.StockController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>suppliesStocks</servlet-name>
  	<url-pattern>/addStocks</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>suppliesStocks</servlet-name>
  	<url-pattern>/addSuppliesStocksRecord</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>suppliesStocks</servlet-name>
  	<url-pattern>/updateSuppliesStocksRecord</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>suppliesStocks</servlet-name>
  	<url-pattern>/searchSuppliesStocksRecord</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>suppliesStocks</servlet-name>
  	<url-pattern>/nextPage</url-pattern>
  </servlet-mapping>
</web-app>